# API Key de Groq (gratis en console.groq.com)
GROQ_API_KEY=tu_api_key_aqui

# Credenciales de Firebase (JSON en una línea)
# Obtener de: Firebase Console -> Configuración -> Cuentas de servicio -> Generar nueva clave privada
FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# URL del formulario de soporte para casos que el bot no pueda resolver
SUPPORT_FORM_URL=https://alasexpressweb.com/soporte

# Zona horaria
TIMEZONE=America/Argentina/Buenos_Aires

# Puerto (Railway lo configura automáticamente)
PORT=3000

